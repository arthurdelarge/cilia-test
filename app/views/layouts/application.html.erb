<!DOCTYPE html>
<html>
  <head>
    <title><%= t('title') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    -->
    <div class="bg-image"></div>
    <div class="content" align="center">

      <div style="margin-left: 10px;margin-upper: 10px; float: left;">
        <%= link_to image_tag("pt-br.png"), '/?locale=pt-BR' %>
        <%= link_to image_tag("en.png") , '/?locale=en' %>
      </div>
      
      <div align="right" style="margin-right: 10px;margin-upper: 10px; float: right;">
      <% if !current_page?(root_path) %>
        <%= link_to t('homepage'), root_path%> &nbsp|&nbsp
      <% end %>
      <% if current_admin %>
        <%= link_to t('devise.log_out'), destroy_admin_session_path, method: :delete %>
      <% elsif !current_page?(new_admin_session_path) %>
        <%= link_to t('devise.log_in'), new_admin_session_path %>
      <% else %>
        <%= link_to t('links.back'), url_for(:back)  %>
      <% end %>
      </div>
      
      </br>
    <%= yield %>
    </div>
  </body>
</html>
