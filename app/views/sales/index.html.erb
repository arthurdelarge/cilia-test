<p id="notice"><%= notice %></p>

<h1><%= @sales.model_name.human(count: 2) %></h1>

<div align="center">
<%= link_to "#{t('links.new')} #{@sales.model_name.human}", new_sale_path %> |
<%= link_to t('links.back'), root_path %>
</div>
<br>

<table class="table">
  <thead>
    <tr>
      <th><%= @sales.human_attribute_name(:id) %></th>
      <th><%= @sales.human_attribute_name(:client) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.id %></td>
        <td><%= sale.client.description %></td>
        <td><%= link_to t('links.show'), sale %></td>
        <td><%= link_to t('links.edit'), edit_sale_path(sale) %></td>
        <td><%= link_to t('links.destroy'), sale, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>