<p id="notice"><%= notice %></p>

<h1><%= @products.model_name.human(count: 2) %></h1>

<div>
  <% if current_admin %>
    <%= link_to "#{t('links.new')} #{@products.model_name.human}", new_product_path %> |
  <% end %>
  <%= link_to t('links.back'), root_path %>
</div>
<br>

<table class="table">
  <thead>
    <tr>
      <th><%= @products.human_attribute_name(:description) %></th>
      <th><%= @products.human_attribute_name(:long_description) %></th>
      <th><%= @products.human_attribute_name(:price) %></th>
      <th><%= @products.human_attribute_name(:image) %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.description %></td>
        <td><%= product.long_description %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= link_to t('links.show'), product %></td>
        <% if current_admin %>
          <td><%= link_to t('links.edit'), edit_product_path(product) %></td>
          <td><%= link_to t('links.destroy'), product, method: :delete, data: { confirm: t('confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>